[% IF usertexts.size -%]
      <!-- User texts -->
      <h3>My text traditions (full access)</h3>
      <div class="text_list">
        <ul>
[% SET i = 0 -%]
[% FOREACH t IN usertexts -%]
          <li><span id="[% t.id %]" class="traditionname canmod" onClick="$('.traditionname').removeClass('selected');$(this).addClass('selected');loadTradition('[% t.id %]','[% t.name.squote %]', 1)">[% t.name %]</span></li>
[% i = i + 1 -%]
[% END -%]
        </ul>
      </div>
[% END -%]
[% IF publictexts.size -%]
      <!-- Public texts -->
      <h3>[% IF is_admin %]All other text traditions (full access)[% ELSE %]Public text traditions (read-only)[% END %]</h3>
      <div class="text_list">
        <ul>
[% SET i = 0 -%]
[% FOREACH t IN publictexts -%]
          <li><span id="[% t.id %]" class="traditionname[% IF is_admin %] canmod[% END %]" onClick="$('.traditionname').removeClass('selected');$(this).addClass('selected');loadTradition('[% t.id %]','[% t.name.squote %]', [% is_admin ? 1 : 0 %])">[% t.name %]</span></li>
[% i = i + 1 -%]
[% END -%]
        </ul>
      </div>
[% END -%]
